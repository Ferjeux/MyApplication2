<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.myapplication.MainActivity">

    <TextView
        android:id="@+id/Question"
        android:layout_width="297dp"
        android:layout_height="109dp"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/rep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="231dp"
        android:onClick="click1"
        android:layout_marginStart="39dp"
        android:layout_alignBaseline="@+id/rep2"
        android:layout_alignBottom="@+id/rep2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/rep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="231dp"
        android:onClick="click2"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/Question"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <TextView
        android:id="@+id/reponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:textSize="30sp"
        android:layout_below="@+id/rep1"
        android:layout_alignEnd="@+id/rep2"
        android:layout_alignStart="@+id/rep1" />

</RelativeLayout>
